{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.0.0",
    "uuid": "e0e20955-d71c-4003-85e5-7d65eb9da03f",
    "name": {
        "en": "Contract to Invoices",
        "cs": "Contract to Invoices"
    },
    "description": {
        "en": "Trigger AbraFlexi contracts to generate invoices",
        "cs": "Trigger AbraFlexi contracts to generate invoices"
    },
    "version": "1.0.0",
    "tags": [
        "AbraFlexi",
        "Contracts",
        "Invoices"
    ],
    "homepage": "https://github.com/VitexSoftware/abraflexi-contract-invoices",
    "image": "",
    "ociimage": "docker.io/vitexsoftware/abraflexi-contract-invoices",
    "executable": "abraflexi-contract-invoices",
    "environment": {
        "APP_DEBUG": {
            "type": "checkbox",
            "description": {
                "en": "Show debug messages",
                "cs": "Show debug messages"
            },
            "defval": "False",
            "required": true,
            "category": "Behavior"
        },
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": "",
            "defval": "demo_de",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Login",
                "cs": "AbraFlexi Login"
            },
            "defval": "winstrom",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "password",
            "description": {
                "en": "AbraFlexi password",
                "cs": "AbraFlexi password"
            },
            "defval": "winstrom",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Server URI",
                "cs": "AbraFlexi Server URI"
            },
            "defval": "https://demo.flexibee.eu:5434",
            "required": true,
            "category": "API"
        },
        "RESULT_FILE": {
            "type": "string",
            "description": {
                "en": "write output json data to",
                "cs": "write output json data to"
            },
            "defval": "contracts_{ABRAFLEXI_COMPANY}.json",
            "required": false,
            "category": "Other"
        },
        "ZABBIX_KEY": {
            "type": "string",
            "description": {
                "en": "Default name for Zabbix Item key name",
                "cs": "Default name for Zabbix Item key name"
            },
            "defval": "Generated-Contracts-{ABRAFLEXI_COMPANY}",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "write log messages using"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        }
    }
}
