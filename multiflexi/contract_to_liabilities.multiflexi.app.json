{
  "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/schema/application.json",
  "schemaVersion": "3.2.1",
  "version": "1.2.3",
  "uuid": "fecc7f19-a7a7-4e57-ba09-cafcfeb80829",
  "name": {
    "en": "Contract to Liabilities",
    "cs": "Generuj závazky ze smluv"
  },
  "description": {
    "en": "Generate AbraFlexi liabilities from contract advance payments.",
    "cs": "Generuj závazky ze zálohových faktur ve smlouvách AbraFlexi."
  },
  "requirements": [
    "AbraFlexi"
  ],
  "tags": [
    "AbraFlexi",
    "Contracts",
    "Liabilities",
    "Advance Payments"
  ],
  "homepage": "https://github.com/VitexSoftware/abraflexi-contract-invoices",
  "ociimage": "docker.io/vitexsoftware/abraflexi-contract-invoices",
  "executable": "abraflexi-contract-to-liabilities",
  "environment": {
    "APP_DEBUG": {
      "type": "bool",
      "description": {
        "en": "Show debug messages",
        "cs": "Zobrazit ladicí zprávy"
      },
      "defval": false,
      "required": true,
      "category": "Behavior"
    },
    "ABRAFLEXI_COMPANY": {
      "type": "string",
      "description": {
        "en": "AbraFlexi Company",
        "cs": "AbraFlexi Společnost"
      },
      "defval": "demo_de",
      "required": true,
      "category": "API"
    },
    "ABRAFLEXI_LOGIN": {
      "type": "string",
      "description": {
        "en": "AbraFlexi Login",
        "cs": "AbraFlexi Přihlašovací jméno"
      },
      "defval": "winstrom",
      "required": true,
      "category": "API"
    },
    "ABRAFLEXI_PASSWORD": {
      "type": "password",
      "description": {
        "en": "AbraFlexi password",
        "cs": "AbraFlexi heslo"
      },
      "defval": "winstrom",
      "required": true,
      "category": "API"
    },
    "ABRAFLEXI_URL": {
      "type": "string",
      "description": {
        "en": "AbraFlexi Server URI",
        "cs": "AbraFlexi Server URI"
      },
      "defval": "https://demo.flexibee.eu:5434",
      "required": true,
      "category": "API"
    },
    "LIABILITY_INVOICE_TYPE": {
      "type": "string",
      "description": {
        "cs": "Typ faktury ze které se vytvoří závazek",
        "en": "Type of invoice to create liability from"
      },
      "hint": "ZAVAZEK",
      "required": false,
      "category": "Behavior"
    },
    "LIABILITY_DOCUMENT_TYPE": {
      "type": "string",
      "description": {
        "cs": "vytvoří závazek toho typu dokumentu",
        "en": "create liability of document type"
      },
      "hint": "OST. ZÁVAZKY",
      "required": true,
      "category": "Behavior"
            
    },
    "RESULT_FILE": {
      "type": "string",
      "description": {
        "en": "write output json data to",
        "cs": "zapsat výstupní json data do"
      },
      "defval": "liabilities_{ABRAFLEXI_COMPANY}.json",
      "required": true,
      "category": "Other"
    },
    "EASE_LOGGER": {
      "type": "string",
      "description": {
        "en": "write log messages using",
        "cs": "zapisovat log zprávy pomocí"
      },
      "defval": "console|syslog",
      "required": false,
      "category": "Behavior"
    }
  },
  "exitcodes": {
    "0": {
      "en": "Success",
      "cs": "Úspěch"
    },
    "1": {
      "en": "General error or failure",
      "cs": "Obecná chyba nebo selhání"
    },
    "2": {
      "en": "Invalid configuration or missing required environment variable",
      "cs": "Neplatná konfigurace nebo chybějící povinná proměnná prostředí"
    },
    "3": {
      "en": "AbraFlexi API error",
      "cs": "Chyba API AbraFlexi"
    }
  }
}