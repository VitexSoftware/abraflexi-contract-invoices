#!/usr/bin/make -f

%:
	dh $@

override_dh_install:
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//' `'"'  debian/conf/composer.json |sponge debian/conf/composer.json
	dh_install
	sed -i -e 's/..\/vendor/\/var\/lib\/abraflexi-contract-invoices/g' 	debian/abraflexi-contract-invoices/usr/lib/abraflexi-contract-invoices/GenerujFakturyZeSmluv.php
	sed -i -e 's/\.\./\/etc\/abraflexi/g' 	     				debian/abraflexi-contract-invoices/usr/lib/abraflexi-contract-invoices/GenerujFakturyZeSmluv.php
